<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="My Neighbor Totoro"
        android:textSize="18sp"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/director_tv" />

    <TextView
        android:id="@+id/director_tv"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Miyadzaki"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/title_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/film_save_iv"
        android:layout_width="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_dont_saved"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/director_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>